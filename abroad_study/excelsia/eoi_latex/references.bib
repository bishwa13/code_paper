  shorttitle = {Climate {{Change}}, {{Uncertainty}}, and {{Adaptation}}},
  author = {Quiggin, John and Adamson, David and Chambers, Sarah and Schrobback, Peggy},
  year = {2010},
  journal = {Canadian Journal of Agricultural Economics/Revue canadienne d'agroeconomie},
  volume = {58},
  number = {4},
